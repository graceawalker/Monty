@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Monty.UI.Models.PayPeriodModels.PayPeriodViewModel
<fieldset>
    <table>
        <tr>
            <td>
                Name
            </td>
            <td>
                Start
            </td>
            <td>
                End
            </td>
        </tr>
        @foreach (var pp in Model.ExistingPayPeriods)
        {

            <tr>
                <td>
                    <div contenteditable class="editPayPeriod" data-type="name" data-id="@pp.Id">@pp.PayPeriodName</div>
                </td>
                <td>
                    <div contenteditable class="editPayPeriod" data-type="startDate" data-id="@pp.Id">@pp.StartDate</div>
                </td>
                <td>
                    <div contenteditable class="editPayPeriod" data-type="endDate" data-id="@pp.Id">@pp.EndDate</div>
                </td>
                <td>
                    <div>@Html.ActionLink("Delete", "Delete","PayPeriod", new { payPeriodId = @pp.Id }, null)</div>
                </td>
            </tr>
        }
    </table>
</fieldset>
