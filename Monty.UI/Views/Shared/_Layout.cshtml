<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Home.js")" type="text/javascript"></script>
</head>
<body>
    @RenderBody()
</body>
</html>
<script type="text/javascript">

    var navigation = new Navigation();
    
    $(".datagrid tr").not(':first').hover(
  function () {
      $(this).css("cursor", "pointer");
  },
  function () {
      $(this).css("cursor", "default");
  }
);

  $(".datagrid tr").live('click', function () {
      navigation.location = $(this).attr('data-type');
      navigation.id = $(this).attr('data-id');

      navigation.popup.dialog({
          modal: true,
          open: function () {
              $(this).load('../Home/Edit', { type: navigation.location, id: navigation.id });
          },
          height: 500,
          width: 600,
          title: 'Edit',
          close: function () {

          }
      });
      
      navigation.popup.dialog('open');
  });

  function Navigation() {
      this.popup = $('<div>').dialog({ autoOpen: false});
  };
</script>
